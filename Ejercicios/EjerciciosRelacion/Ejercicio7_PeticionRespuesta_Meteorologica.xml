    <peticion>
        <cliente>
            <token>ABC123XYZ</token>
            <aplicacion>MiAppClima</aplicacion>
        </cliente>
        <localizacion>
            <ciudad>Madrid</ciudad>
            <codigoPostal>28001</codigoPostal>
            <coordenadas>
                <latitud>40.4168</latitud>
                <longitud>-3.7038</longitud>
            </coordenadas>
        </localizacion>
        <datosSolicitados>
            <condicionesActuales>true</condicionesActuales>
            <previsionDiaria>true</previsionDiaria>
            <datosHistoricos>false</datosHistoricos>
        </datosSolicitados>
        <parametros>
            <idioma>es</idioma>
            <unidades>metricas</unidades>
