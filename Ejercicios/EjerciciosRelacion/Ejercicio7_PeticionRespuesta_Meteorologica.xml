            <prevision>
                <dia>
                    <fecha>2025-02-11</fecha>
                    <temperaturaMaxima>18</temperaturaMaxima>
                    <temperaturaMinima>10</temperaturaMinima>
                    <condicion>Despejado</condicion>
                </dia>
